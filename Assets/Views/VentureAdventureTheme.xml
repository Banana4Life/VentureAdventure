<Theme Name="VentureAdventure" BaseDirectory="Assets/" xmlns="MarkLight">
  <Label Font="Fonts/thin_pixel-7.ttf" FontSize="30"/>
  <ColumnHeader FontStyle="Bold" />
  
  <!-- Hero Card -->

  <HeroCard BackgroundImage="Textures/Tavern/pergament_250.png" Width="500" Height="250" />

  <Label Style="HeroCardTitle" Alignment="TopLeft" FontSize="45" FontStyle="Bold" Margin="0,0,0,5"/>

  <Button Style="HeroCardAction" Height="50" Width="150" Highlighted-FontColor="White" />
  <Button Style="Invest" BasedOn="HeroCardAction" BackgroundImage="Textures/Tavern/button-invest.png"/>
  
  <Button Style="Equipment" Height="40" Width="40"
          Alpha="0.6" Highlighted-Alpha="1" Active-Alpha="1"/>

  <Button Style="Weapon" BasedOn="Equipment" BackgroundImage="Textures/Tavern/button-weapon.png" />
  <Button Style="Armor" BasedOn="Equipment" BackgroundImage="Textures/Tavern/button-armor.png" />

  <Row Style="HeroStat" Height="25" />
  <Row Style="AlternateStat" BasedOn="HeroStat" BackgroundColor="#bc9376" />
  
</Theme>